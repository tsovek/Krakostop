@using Krakostop.Models
@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account",
    new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post,
    new { @class = "form-login"}))
{
@Html.AntiForgeryToken()
<div class="login-wrap">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.TextBoxFor(m => m.Email, new
   {
       @placeholder = "Email / ID pary",
       @class = "form-control"
   })
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    <br>
    @Html.PasswordFor(m => m.Password, new
   {
       @class = "form-control",
       @placeholder = "Hasło"
   })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    <div class="checkbox">
        @Html.CheckBoxFor(m => m.RememberMe)
        @Html.LabelFor(m => m.RememberMe)
    </div>
    <label class="checkbox">
        <span class="pull-right">
            <a data-toggle="modal" href="login.html#myModal"> Zapomnieliście hasła?</a>

        </span>
    </label>
    <button class="btn btn-theme btn-block btn-sm" type="submit">
        <i class="fa fa-lock"></i>  Zalogujcie się
    </button>
    <hr>
    <div class="registration">
        <div class="col-md-7">
            Weź udział w wyścigu!<br />
            @Html.ActionLink("Stwórz konto", "Register", "Account",
                routeValues: null, htmlAttributes: new { id = "registerLink" })
        </div>
        <div class="col-md-5">
            Szukasz pary?<br />
            @Html.ActionLink("Parozłączka!", "Index", "PairJoiner")
        </div>
    </div>

</div>

<div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Zapomnieliście hasła?</h4>
            </div>
            <div class="modal-body">
                <p>Wpiszcie email którejś osoby z pary, aby zresetować hasło.</p>
                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

            </div>
            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default btn-sm" type="button">Anuluj</button>
                <button class="btn btn-theme btn-sm" type="button">Wyślij</button>
            </div>
        </div>
    </div>
</div>
}
